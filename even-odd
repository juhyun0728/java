
import java.util.*;
public class Code3 {

	public static void main(String[] args) {
		Scanner kb=new Scanner(System.in);
		int n=kb.nextInt();
		int [] data=new int[n];
		
		int even=0;
		int odd=0;
		
		for(int i=0;i<n;i++) {
			data[i]=kb.nextInt();
			
			if(data[i]%2==0)
				even+=data[i];
			else odd+=data[i];
		}
		
		kb.close();
		
		int result=even-odd;
		System.out.print(even+"-"+odd+"="+result);

	}

}
